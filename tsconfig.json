{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "pretty": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": false,
    "newLine": "LF",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "baseUrl": "packages"
  },
  "exclude": [
    "node_modules",
    "packages/*/node_modules"
  ]
}